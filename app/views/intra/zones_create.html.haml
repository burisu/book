%h1 Gérer les zones géographiques
.path
  -for parent in @parents
    =link_to parent.name, :action=>:zones_create, :id=>parent.id
    &raquo;
  &bull;


-form_tag do
  =error_messages_for 'zones'
  %label Nom
  =text_field :zone, :name
  %label Numéro
  =text_field :zone, :number
  %label Pays
  =select :zone, :country_id, Country.find(:all, :order=>:name).collect {|p| [ p.name, p.id ] }
  =submit_tag 'Créer la zone'


.futo 
  %table.list
    %tr
      %th Nom
      %th Numéro
      %th Pays
    -for zone in @zones
      %tr
        %td=link_to(zone.name, :action=>:zones_create, :id=>zone.id)
        %td=zone.number
        %td=image_tag("countries/#{zone.country.iso3166.downcase}.png")+" "+zone.country.name

