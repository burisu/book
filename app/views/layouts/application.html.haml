!!! XML utf-8
!!! Strict
%html{:xmlns=>"http://www.w3.org/1999/xhtml"}
  %head
  %title='Rotex 1690 - '+@title.to_s
  = template_link_tag @vision
  = javascript_include_tag :defaults
  %body
    #header
      .column
        .flag
        .menu
          -if @vision==:rotex
            %ul
              %li=link_to 'Accueil', {:controller=>:home}
              - unless @current_person
                %li= link_to 'Espace Membres', {:controller=>:intra, :action=>:profile}
              %li= link_to 'Contact', {:controller=>:home, :action=>:special, :id=>:contact}
              %li= link_to 'À propos de nous', {:controller=>:home, :action=>:special, :id=>:about_us}
              %li= link_to 'Mentions légales', {:controller=>:home, :action=>:special, :id=>:legals}
    #bodier
      .column
        =flash_tag :error
        =flash_tag :warning
        =flash_tag :notice
        #mainbody
          %table#maintable
            %tr
              = render(:partial=>'shared/submenu', :object=>@current_person) if @current_person
              %td.subbody{:valign=>"top"}=yield
    #footer
      .column
        .legals 
          =@vision==:rotary ? 'Rotary District 1690' : 'Rotex 1690'
          =" - Copyright 2008-2009 - "
          =request.domain
          
