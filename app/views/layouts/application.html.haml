!!! XML utf-8
!!! Strict
%html{:xmlns=>"http://www.w3.org/1999/xhtml"}
  %head
  %title='Rotex 1690 - '+@title.to_s
  = template_link_tag @vision
  = stylesheet_link_tag 'dyta', 'dyta-colors'
  = javascript_include_tag :defaults
  %body
    #header
      .column
        .flag
        =menu_tag
    #bodier
      .column
        =flash_tag :error
        =flash_tag :warning
        =flash_tag :notice
        #mainbody
          %table#maintable
            %tr
              = render(:partial=>'shared/submenu', :object=>@current_person) if @current_person and @vision==:rotex
              %td.subbody{:valign=>"top"}=yield
    #footer
      .column
        .legals 
          =@vision==:rotary ? 'Rotary District 1690' : 'Rotex 1690'
          =" - Copyright 2008-2009 - "
          =request.domain
          
