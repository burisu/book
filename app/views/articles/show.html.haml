=toolbar do |t|
  -if @article.rubric
    -t.show @article.rubric
  -t.edit @article
  -t.destroy @article, :method => :delete, :confirm => 'Êtes-vous sûr(e) de vouloir supprimer cet enregistrement'
=fieldset :general do
  =attributes_list @article do |l|
    -l.attribute :title
    -l.attribute :intro
    -l.attribute :body
    -l.attribute :done_on
    -l.attribute :bad_natures
    -l.attribute :status
    -l.attribute :document
    -l.attribute :author, :label => :label, :url => true
    -l.attribute :rubric, :label => :name, :url => true
    -l.attribute :language
=fieldset :meta do
  =attributes_list @article do |l|
    -l.attribute :id
    -l.attribute :created_at
    -l.attribute :updated_at
    -l.attribute :lock_version
