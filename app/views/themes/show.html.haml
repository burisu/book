=toolbar do |t|
  -t.link :index
  -t.edit @theme
  -t.destroy @theme, :method => :delete, :confirm => 'Êtes-vous sûr(e) de vouloir supprimer cet enregistrement'
=fieldset :general do
  =attributes_list @theme do |l|
    -l.attribute :name
    -l.attribute :color
    -l.attribute :comment
=fieldset :meta do
  =attributes_list @theme do |l|
    -l.attribute :id
    -l.attribute :created_at
    -l.attribute :updated_at
    -l.attribute :lock_version

%h2=tg(:x_questions, :count => @theme.questions.count, :default => Theme.human_attribute_name('questions'))
=toolbar do |t|
  -t.link :new, :controller => :questions, :theme_id => @theme.id, :redirect=>request.url
-if @theme.questions.count > 0
  =list(:questions)
