-# Auto-generated by rake :scaff
=toolbar do |t|
  -t.link :index
  -t.edit @promotion
  -t.destroy @promotion, :method => :delete, :confirm => 'Êtes-vous sûr(e) de vouloir supprimer cet enregistrement'
=fieldset :general do
  =attributes_list @promotion do |l|
    -l.attribute :name
    -l.attribute :is_outbound
    -l.attribute :from_code
=fieldset :meta do
  =attributes_list @promotion do |l|
    -l.attribute :id
    -l.attribute :created_at
    -l.attribute :updated_at
    -l.attribute :lock_version

%h2=tg(:x_people, :count => @promotion.people.count, :default => Promotion.human_attribute_name('people'))
=toolbar do |t|
  -t.link :new, :controller => :people, :promotion_id => @promotion.id, :redirect=>request.url
-if @promotion.people.count > 0
  =list(:people)

%h2=tg(:x_questions, :count => @promotion.questions.count, :default => Promotion.human_attribute_name('questions'))
=toolbar do |t|
  -t.link :new, :controller => :questions, :promotion_id => @promotion.id, :redirect=>request.url
-if @promotion.questions.count > 0
  =list(:questions)
