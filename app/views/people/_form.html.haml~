=semantic_form_for @person do |f|
  =f.inputs :name => "Identité" do
    =f.input :patronymic_name
    =f.input :family_name
    =f.input :first_name
    =f.input :second_name
    =f.input :sex, :collection => [['Homme', 'h'], ['Femme', 'f']]
    =f.input :born_on
    =f.input :country, :collection => countries, :as => :select
    =f.input :photo
  =f.inputs :contact do
    =f.input :address
    =f.input :phone
    =f.input :mobile
    =f.input :phone2
    =f.input :fax
    =f.input :email
