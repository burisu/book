=semantic_fields_for @person do |f|
  =f.inputs :name => tg(:identity) do
    =f.input :patronymic_name, :required=>true
    =f.input :family_name
    =f.input :first_name, :required=>true
    =f.input :second_name
    =f.input :sex, :collection => [['Homme', 'h'], ['Femme', 'f']], :as => :radio
    =f.input :born_on
    =f.input :country, :collection => countries, :as => :select
    =f.input :photo
  =f.inputs :name => tg(:contact) do
    =f.input :address
    =f.input :phone
    =f.input :mobile
    =f.input :phone2
    =f.input :fax
    =f.input :email
  =f.inputs :name => tg(:account) do
    =f.input :user_name
    =f.input :password
    =f.input :password_confirmation


