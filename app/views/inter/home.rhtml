<%if @agenda.size>0 or @blog.size>0-%><div class="right_menu">
<%if @agenda.size>0-%>
<div class="frame agenda"><h3>Agenda</h3><table border="0"><%for article in @agenda-%><tr class="<%=cycle 'odd','even'-%>"><td class="date"><%=article.done_on.to_s-%></td><td><%= link_to article.title_h, {:controller=>:inter, :action=>:article, :id=>article.id}-%></td></tr><%end-%></table></div><%end-%>
<%if @agenda.size>0 and @blog.size>0-%><div class="separator"></div><%end-%>
<%if @blog.size>0-%>
<div class="frame blog"><h3>Extraits aléatoires</h3>
<%for article in @blog-%><div><h4><%=article.title_h-%></h4><div><%=article.intro_h-%><%=link_to 'Lire la suite', {:controller=>:intra, :action=>:show_report, :id=>article}-%></div></div><%end-%></div><%end-%>
</div>
<%end-%>

<%for article in @articles-%>
<div class="article">
<h1><%=article.title_h-%></h1>
<div><%=article.content_h-%></div>
<div class="author">&Eacute;crit par <%=article.author.label-%> le <%=I18n.localize(article.created_at, :format=>:long)-%> et mis à jour le <%=I18n.localize(article.updated_at, :format=>:long)-%></div>
</div>
<%end%>

<%= will_paginate @articles-%>

