%h1="Paiement #{@payment.number}(#{@payment.mode}) de #{@payment.amount}€"
%h3="Ventes : "+@payment.sales.collect{|s| s.number}.to_sentence

-if @payment.received?
  %strong Paiement reçu
  %table
    -for column, letter in Payment.transaction_columns
      %tr
        %td=column
        %td=@payment.send(column)
-else
  %strong Paiement non reçu
  -if [:cash, :check].include? @payment.mode.to_sym
    %p="Veuillez remettre votre règlement au trésorier ("+Person.mandated_for(['tresor']).collect{|p| "<em>"+p.label+", "+p.address.gsub("\n", ", ")+"</em>"}.join(" ou ")+") pour que votre achat puisse être pris en compte" 
