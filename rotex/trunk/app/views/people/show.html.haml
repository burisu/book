%h1=@person.label

%table.infos.formu
  %tr
    %td.label Adresse
    %td.value=@person.address
  %tr
    %td.label Téléphone (domicile)
    %td.value=@person.phone
  %tr
    %td.label Téléphone (travail)
    %td.value=@person.phone2
  %tr
    %td.label Téléphone (mobile)
    %td.value=@person.mobile
  %tr
    %td.label Fax/Télécopie
    %td.value=@person.fax
  %tr
    %td.label E-mail
    %td.value=mail_to @person.email
  %tr
    %td.label Pays d'origine
    %td.value=image_tag("country/"+@person.country.iso3166.downcase+".png")+' '+@person.country.name
  %tr
    %td.label Sexe
    %td.value=@person.sex
  %tr
    %td.label Date de naissance
    %td.value=@person.born_on
  %tr
    %td.label Voyage
    %td.value=link_to('Voir le récit du voyage', :action=>:story, :id=>@person.id) if @person.promotion
  %tr
    %td.label Dossier complet
    %td.value=link_to('Consulter', :action=>:folder, :id=>@person.id) if @person.promotion

%h2 Cotisations
-if access? :subscribing
  %ul.aclist
    %li=link_to "Ajouter une cotisation", {:action=>:subscription_create, :id=>@person.id}
  =dyta :person_subscriptions

%h2 Articles
=dyta :person_articles

%h2 Mandats
-if access?
  %ul.aclist
    %li=link_to "Ajouter un mandat",{:action=>:mandates_create, :id=>@person.id}
=dyta :person_mandates
