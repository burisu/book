%h1
  ="Questionnaire "
  %em=@questionnaire.name
%ul.aclist
  %li=link_to "Modifier", edit_questionnaire_url(@questionnaire)
.dsc
  %dl
    %dt Promotion
    %dd=@questionnaire.promotion_name
    %dt Période d'activité
    %dd="du #{I18n.localize(@questionnaire.started_on)} au #{I18n.localize(@questionnaire.stopped_on)}"
    %dt Introduction
    %dd=@questionnaire.intro
    %dt Commentaire
    %dd=@questionnaire.comment

%h2 Questions
-unless @questionnaire.active
  %ul.aclist
    %li=link_to "Ajouter une question", new_question_url(:questionnaire_id=>@questionnaire.id)
=dyta(:questionnaire_questions)


%h2 État des réponses
=dyta(:questionnaire_answers)

%h2 Absences de réponse
%ul.aclist
  %li=link_to "Envoyer un mail aux absents", wake_up_absents_questionnaire_url(@questionnaire), :method=>:post
=dyta(:questionnaire_students)
