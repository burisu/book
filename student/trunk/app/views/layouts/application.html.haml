!!! XML utf-8
!!! Strict
%html{:xmlns=>"http://www.w3.org/1999/xhtml"}
  %head
  %title
    ='Student-Exchange - Rotary District 1690'
    =' - '+@title.to_s
  = template_link_tag :rotary
  = stylesheet_link_tag 'dyta', 'dyta-colors'
  = stylesheet_link_tag 'print', :media=>"print"
  = javascript_include_tag :defaults
  %body
    #header
      .column
        .flag
        =menu_tag
    #bodier
      .column
        =flash_tag :error
        =flash_tag :warning
        =flash_tag :notice
        #mainbody
          %table#maintable
            %tr
              %td.subbody{:valign=>"top"}=yield
    #footer
      .column
        .legals 
          ='Rotary District 1690'
          =" - Copyright 2008-2010 - "
          =request.domain
